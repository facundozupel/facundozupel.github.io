const pageDescription = `${cascada.nombre}: serie escalonada de rápidos sobre basalto volcánico en ${cascada.region}, Chile. Cómo llegar, senderos, precio entrada, horario y toda la información para tu visita.`;
---

<Layout
  title={pageTitle}
  description={pageDescription}
  ogImage={cascada.imagen}
  structuredData={structuredData}
>

  <!-- ─── 1. HERO ──────────────────────────────────────────────────────────── -->
  <section class="cascada-hero" style={`--bg-image: url('${cascada.imagen}')`}>
    <div class="cascada-hero__bg"></div>
    <div class="cascada-hero__overlay"></div>
    <div class="cascada-hero__content">
      <nav class="cascada-breadcrumb">
        <a href="/">Inicio</a>
        <span>›</span>
        <a href="/cascadas">Cascadas</a>
        <span>›</span>
        <a href={`/region/${cascada.region.toLowerCase().replace(/\s/g,'-')}`}>{cascada.region}</a>
        <span>›</span>
        <span class="cascada-breadcrumb__current">{cascada.nombre}</span>
      </nav>

      <div class="cascada-hero__bottom">
        <div>
          <span class="cascada-badge">{cascada.region}</span>
          <h1 class="cascada-hero__title">{cascada.nombre}</h1>
        </div>
