    { autor: 'Alonso Jiménez Quesada', licencia: 'CC BY-SA 3.0', url: 'https://commons.wikimedia.org/wiki/File:Salto_del_Laja_Chile.jpg' },
    { autor: 'Monteaguilino1', licencia: 'CC BY-SA 4.0', url: 'https://commons.wikimedia.org/wiki/File:Salto_del_Laja_2019_(2).jpg' },
    { autor: 'Warko', licencia: 'Dominio público', url: 'https://commons.wikimedia.org/wiki/File:Salto_del_Laja.jpg' },
