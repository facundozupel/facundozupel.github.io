  // 3 por cercanía geográfica (misma región o adyacente)
  cascadasCercanas: [
    { nombre: 'Salto del Itata', slug: 'salto-del-itata', region: 'Biobío', altura: 20, tipo: 'cercania' },
    { nombre: 'Salto Rehuen', slug: 'salto-rehuen', region: 'Biobío', altura: 15, tipo: 'cercania' },
