    { nombre: 'Saltos del Petrohué', slug: 'saltos-del-petrohue', region: 'Los Lagos', altura: 20, tipo: 'relacionada' },
    { nombre: 'Salto La Placeta', slug: 'salto-la-placeta', region: 'Maule', altura: 30, tipo: 'relacionada' },
    { nombre: 'Salto Chancagua', slug: 'salto-chancagua', region: 'La Araucanía', altura: 30, tipo: 'relacionada' },
  ],

  // --- Datos verificados por chile-waterfalls-researcher (feb 2026) ---
  lat: -37.2167,
  lng: -72.3833,
  rio: 'Río Laja',
  tipoFormacion: 'Meseta basáltica volcánica',
  numeroBrazos: 4,
