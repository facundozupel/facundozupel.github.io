    { autor: 'alejandro rivas m.', licencia: 'CC BY-SA 3.0', url: 'https://commons.wikimedia.org/wiki/File:Salto_Rehuen.jpg' },
    { autor: 'LuisCG11', licencia: 'CC BY-SA 4.0', url: 'https://commons.wikimedia.org/wiki/File:Mulch%C3%A9n_-_Salto_Rehu%C3%A9n.jpg' },
  ],
  // 3 por cercanía geográfica (Biobío / La Araucanía)
  cascadasCercanas: [
    { nombre: 'Salto del Laja', slug: 'salto-del-laja', region: 'Biobío', altura: 35, tipo: 'cercania' },
    { nombre: 'Salto del Itata', slug: 'salto-del-itata', region: 'Ñuble', altura: 75, tipo: 'cercania' },
    { nombre: 'Salto Chancagua', slug: 'salto-chancagua', region: 'La Araucanía', altura: 70, tipo: 'cercania' },
  ],
  // 3 por relación semántica (misma altura, acceso similar, entorno volcánico)
